<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ledvance</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css">
    <style>
        .filters {
            position: sticky;
            display: inline-block;
            vertical-align: top;
            max-height: 100vh;
            overflow-y: auto;
            top:3em;
            bottom: 0;
        }
    </style>
</head>
<body>
<nav class="navbar is-dark is-fixed-top">
    <div class="navbar-menu">
        <div class="navbar-start">
            <a class="navbar-item" href="{{ path('list_of_products') }}">List of products</a>
            <a class="navbar-item" href="{{ path('compare') }}">Compare</a>
            <a class="navbar-item" href="{{ path('import') }}">Import</a>
        </div>
    </div>
</nav>

<section class="section">
    <div class="container mt-5">
        {% for label, messages in app.flashes(['success', 'danger']) %}
            {% for message in messages %}
                <div class="notification is-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block body %}{% endblock %}
    </div>
</section>
</body>
</html>
