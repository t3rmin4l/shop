{% extends 'base.html.twig' %}

{% block body %}
    <a class="button is-warning" href="{{ path('compare_export_pdf') }}">export to pdf</a>
    <section class="section">
        <div class="container">
            <div class="columns is-multiline">
                {% for product in products %}
                    <div class="column is-one-third">
                        <a href="{{ path('product', { id: product.id, slug: product.slug }) }}">
                            <div class="card">
                                <div class="card-image">
                                    <figure class="image is-4by3">
                                        <img src="{{ product.imageUrl }}" alt="{{ product.productNameShort }}">
                                    </figure>
                                </div>
                                <div class="card-content">
                                    <div class="media">
                                        <div class="media-content">
                                            <p class="title is-4">{{ product.productNameShort }}</p>
                                            <a class="button is-small mt-2 is-danger mb-3" href="{{ path('remove_from_compare', { id: product.id }) }}">-compare</a>
                                            {% for attribute in product.productAttributes %}
                                                <p class="title is-5 has-text-grey" style="border-bottom: 5px solid black">
                                                    {{ attribute.attributeName }}: {{ attribute.attributeValue }}
                                                </p>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% else %}
                    <div class="column">
                        <p>No products found.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
